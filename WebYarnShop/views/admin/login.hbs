<!-- Inner page section -->
<section class="inner_page_head py-4 bg-light border-bottom">
    <div class="container">
        <h3 class="text-center mb-0">Login</h3>
    </div>
</section>

<!-- Login Form Section -->
<section class="why_section layout_padding py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">

                <div class="card shadow-sm">
                    <div class="card-body p-4">

                        <h4 class="text-center mb-4">Welcome Back</h4>

                        <form action="/login" method="post">

                            <!-- Email -->
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input
                                        type="email"
                                        class="form-control"
                                        placeholder="Enter your email"
                                        name="email"
                                        required>
                            </div>

                            <!-- Password with Show/Hide -->
                            <div class="mb-3">
                                <label class="form-label">Password</label>

                                <div class="input-group">
                                    <input
                                            type="password"
                                            class="form-control"
                                            placeholder="Enter password"
                                            name="password"
                                            id="passwordInput"
                                            required>

                                    <button
                                            class="btn btn-outline-secondary"
                                            type="button"
                                            id="togglePassword">
                                        Show
                                    </button>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    Login
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>